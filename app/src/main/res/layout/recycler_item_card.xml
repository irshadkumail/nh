<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="4dp"
    app:contentPadding="5dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/card_cons_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:id="@+id/salah_name"
            tools:text="Fajr"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintEnd_toStartOf="@id/salah_time_ampm"
            app:layout_constraintBottom_toBottomOf="@id/card_cons_parent"
            android:layout_width="wrap_content"
            tools:text="4:00"
            android:id="@+id/salah_time"
            android:textColor="@color/primaryText"
            android:padding="8dp"
            android:textSize="22sp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/card_cons_parent"
            app:layout_constraintBottom_toBottomOf="@id/card_cons_parent"
            tools:text="am"
            android:paddingBottom="10dp"
            android:paddingRight="8dp"
            android:id="@+id/salah_time_ampm"
            android:layout_height="wrap_content" />




    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>